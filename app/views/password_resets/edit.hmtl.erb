<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
  <% if @user.errors.any? %>
  <div class="error_messages">
  	<h2>There's a problem with the form!</h2>
  	<ul>
  		<% for message in @user.errors.full_messages %>
  		<li><%= message %></li>
  		<% end %>
  	</ul>
  </div>
  <% end %>
<div class="field">
	<%= f.label :password %>
	<%= f.password_field :password %>
</div>
<div class="field">
	<%= f.label :password_confirmation %>
	<%= f.label :password_confirmation %>
</div>
<div class="actions"><%= f.submit "Change your password" %></div>
<% end %>

